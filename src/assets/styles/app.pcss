@tailwind base;
@tailwind components;
@tailwind utilities;

.btn {
  @apply py-2 px-4 text-sm font-bold rounded outline-none
}

.btn-primary {
  @apply border-primary border-2 text-primary transition-colors duration-200 ease-in-out
}

.btn-primary:hover {
  @apply bg-primary text-white
}

.btn-primary:focus,
.btn-primary:active {
  @apply outline-none
}

* {
  box-sizing: border-box
}